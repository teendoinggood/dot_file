# ls 
alias ls="ls -GF"
alias ll="ls -al"

# ask for confirmation
alias rm="rm -i"
alias mv="mv -i"
alias cp="cp -i"

# color
alias grep="grep --color=auto -ni"
alias ack="ack -i"

# path shorcut
alias desk="cd ~/Desktop"
alias root="cd /"
alias home="cd ~"

# go back directory
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../../.."
alias ......="cd ../../../../.."
alias .......="cd ../../../../../.."
alias ........="cd ../../../../../../.."
alias .........="cd ../../../../../../../.."
alias ..........="cd ../../../../../../../../.."

# show line number
alias cat="cat -n"

# browser
alias safari="open -a Safari"
alias chrome="open -a Google\ Chrome"
alias firefox="open -a Firefox"

# rename cmd
alias dir="ls"
alias rename="mv"
alias reload="source ~/.bashrc"
alias clear="cls"

